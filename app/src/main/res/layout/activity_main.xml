<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginHorizontal="@dimen/_50sdp"
                android:adjustViewBounds="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/partner_text_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SDK Sample"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="v0.0.1"
                android:textColor="@color/black"
                android:textSize="@dimen/_25sdp"
                android:textStyle="bold" />

            <LinearLayout
                android:gravity="center"
                android:backgroundTint="@color/primary_color"
                android:background="@drawable/round_corner"
                android:paddingHorizontal="@dimen/_15sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/txtPartner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EdfaPay"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />
                <View
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Partner"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:justificationMode="inter_word"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc"/>
        </ScrollView>

        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:visibility="visible"
            android:id="@+id/viewInit"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:enabled="false"
                    android:layout_weight="1"
                    android:lines="3"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:textAlignment="center"
                    android:id="@+id/txtAuthCode"
                    android:hint="Scan or type your auth code here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <ImageView
                    app:tint="@color/primary_color"
                    android:id="@+id/btnScanQr"
                    android:src="@drawable/qr_24"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>
            </LinearLayout>

            <Spinner
                android:layout_marginVertical="@dimen/_10sdp"
                android:id="@+id/envSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                android:id="@+id/btnInitialize"
                android:text="Initialize SDK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:visibility="visible"
            android:id="@+id/viewPay"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_gravity="center"
                android:inputType="numberDecimal"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:id="@+id/txtAmount"
                android:hint="Amount - 1.00"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                android:id="@+id/btnPay"
                android:text="Pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtMsg"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_10sdp"
                android:justificationMode="inter_word"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:text="Click on button above to test the card processing with amount"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
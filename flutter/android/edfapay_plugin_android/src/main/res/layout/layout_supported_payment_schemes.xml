<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/activity_scan_card">

    <LinearLayout
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_weight="1"
        android:visibility="visible"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iconMada"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_45sdp"
            android:padding="@dimen/_8sdp"
            android:layout_margin="@dimen/_3sdp"
            android:src="@drawable/ic_mada_logo"
            tools:visibility="visible"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconVisa"
                style="@style/PaymentSchemeIconSize"
                tools:visibility="visible"
                android:src="@drawable/ic_visa_logo_old"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iconMasterCard"
                style="@style/PaymentSchemeIconSize"
                tools:visibility="visible"
                android:src="@drawable/ic_mastercard_logo"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iconMaestro"
                style="@style/PaymentSchemeIconSize"
                tools:visibility="visible"
                android:src="@drawable/ic_maestro_logo"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iconAmex"
                style="@style/PaymentSchemeIconSize"
                tools:visibility="visible"
                android:src="@drawable/ic_amex"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/icon_discover"
                style="@style/PaymentSchemeIconSize"
                tools:visibility="visible"
                android:src="@drawable/ic_discovery"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmptyCardSchemes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_missing_card_scheme"
            android:textAllCaps="true"
            android:textSize="@dimen/_15ssp"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TextView
            android:background="@color/red"
            android:justificationMode="inter_word"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/title_missing_card_scheme_message"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>
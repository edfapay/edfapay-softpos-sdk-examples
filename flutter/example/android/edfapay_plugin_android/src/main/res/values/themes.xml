<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EdfaCardPayment" parent="Theme.MaterialComponents.Light">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EdfaCardPayment.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EdfaCardPayment.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EdfaCardPayment.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="PaymentSchemeIconSize">
        <item name="android:layout_margin">@dimen/_1sdp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
    </style>
</resources>